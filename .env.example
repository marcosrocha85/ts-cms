# App
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=ts_cms

# Twitter API v2 (X API) - OAuth 2.0 User Context
# Get credentials from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_client_id_here
TWITTER_CLIENT_SECRET=your_client_secret_here
TWITTER_CALLBACK_URL=http://localhost:3000/api/twitter/callback
FRONTEND_URL=http://localhost:3001

# JWT
JWT_SECRET=supersecret_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=refresh_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SMTP)
# For Gmail: use App Password, set secure to true, port 465
# For Mailtrap: use credentials from https://mailtrap.io
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_password_here
SENDER_EMAIL=noreply@tweetscheduler.local
