{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "..",
    "testEnvironment": "node",
    "testRegex": "test/unit/.*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "src/**/*.(t|j)s",
        "!src/main.ts",
        "!src/seed.ts",
        "!src/**/*.module.ts",
        "!src/**/*.entity.ts",
        "!src/**/*.dto.ts"
    ],
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1"
    }
}